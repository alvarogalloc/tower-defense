{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30
  },

  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "toolchainFile": "$env{HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "BUILD_EXAMPLES": false,
        "BUILD_TESTING": false
      }
    },

    {
      "name": "debug_clang",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_LINKER_TYPE": "LLD",
        "CMAKE_LINKER": "lld",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ $env{CXXFLAGS}",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -lc++abi ",
        "BUILD_TESTING": true
      }
    },

    {
      "name": "rel_clang",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build-rel-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_LINKER_TYPE": "LLD",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ $env{CXXFLAGS}",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -lc++abi",
        "CMAKE_LINKER": "lld"
      }
    }

    
  ],

  "buildPresets": [
    { "name": "debug_clang", "configurePreset": "debug_clang" },
    { "name": "rel_clang", "configurePreset": "rel_clang" }
  ],

  "testPresets": [
    {
      "name": "test_debug_clang",
      "configurePreset": "debug_clang",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "error", "stopOnFailure": true }
    }
  ]
}
