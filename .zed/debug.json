[
  {
    "label": "Debug Game with lldb",
    "build": {
      "command": "cmake --build build-debug-clang --target magster",
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build-debug-clang/magster",
    "env": {
      "MAGSTER_DIR": "$ZED_WORKTREE_ROOT"
    },
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
